{
    "name": "mini-rx-store",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:all": "ng build mini-rx-store --prod && ng build mini-rx-store-ng --prod && ng build mini-rx-store-showcase --prod && ng build mini-rx-store-showcase-redux --prod",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "minirx-build": "ng build mini-rx-store --prod && copy LICENSE dist/mini-rx-store && copy README.md dist/mini-rx-store",
        "minirx-build:stats": "npm run minirx-build && source-map-explorer dist/mini-rx-store/**/*.js",
        "test:minirx": "jest --config ./projects/mini-rx-store/jest.config.js",
        "test:minirx:watch": "jest --config ./projects/mini-rx-store/jest.config.js --watch",
        "test:minirx:coverage": "jest --config ./projects/mini-rx-store/jest.config.js --coverage",
        "minirx-ng-build": "ng build mini-rx-store --prod && ng build mini-rx-store-ng --prod",
        "test:minirx-ng": "jest --config ./projects/mini-rx-store-ng/jest.config.js",
        "test:minirx-ng:watch": "jest --config ./projects/mini-rx-store-ng/jest.config.js --watch",
        "test:minirx-ng:coverage": "jest --config ./projects/mini-rx-store-ng/jest.config.js --coverage",
        "showcase-analyze": "ng build  mini-rx-store-showcase --outputPath=dist --prod --stats-json && webpack-bundle-analyzer dist/stats-es2015.json --port 4201",
        "pretty-quick": "pretty-quick"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^9.1.13",
        "@angular/common": "^9.1.13",
        "@angular/compiler": "^9.1.13",
        "@angular/core": "^9.1.13",
        "@angular/forms": "^9.1.13",
        "@angular/platform-browser": "^9.1.13",
        "@angular/platform-browser-dynamic": "^9.1.13",
        "@angular/router": "^9.1.13",
        "angular-in-memory-web-api": "^0.9.0",
        "bootstrap": "^4.6.0",
        "deep-freeze-strict": "^1.1.1",
        "memoize-one": "^5.1.1",
        "rxjs": "^6.6.7",
        "source-map-explorer": "^2.5.2",
        "ts-action": "^11.0.0",
        "ts-action-operators": "^9.1.1",
        "tslib": "^1.14.1",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.901.15",
        "@angular-devkit/build-ng-packagr": "^0.901.15",
        "@angular/cli": "^9.1.15",
        "@angular/compiler-cli": "^9.1.13",
        "@angular/language-service": "^9.1.13",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/jest": "^25.2.3",
        "@types/node": "^12.20.7",
        "codelyzer": "^5.2.2",
        "copy": "^0.3.2",
        "husky": "^4.3.8",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "^26.6.3",
        "jest-marbles": "^2.5.1",
        "jest-preset-angular": "^8.4.0",
        "ng-packagr": "^10.1.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^2.0.2",
        "protractor": "^5.4.4",
        "ts-jest": "^26.5.4",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.8.3",
        "webpack-bundle-analyzer": "^3.9.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
